@model RegisterViewModel

<form asp-action="Register" asp-controller="Kullanici" method="post">
    
    <div class="mb-3">
        <label asp-for="Ad" class="form-label">Ad</label>
        <input type="text" class="form-control" asp-for="Ad">
    </div>
      
    <div class="mb-3">
        <label asp-for="Soyad" class="form-label">Soyad</label>
        <input type="text" class="form-control" asp-for="Soyad">
    </div>

    <div class="mb-3">
      <label asp-for="Eposta" class="form-label">Email</label>
      <input type="email" class="form-control" asp-for="Eposta" aria-describedby="emailHelp">
      <div id="emailHelp" class="form-text">Bilgilerinizi kimseyle paylaşmayacağız</div>
    </div>
    <div class="mb-3">
      <label asp-for="Password" class="form-label">Parola</label>
      <input type="password" class="form-control" asp-for="Password">
    </div>
    
    <div class="mb-3">
      <label asp-for="ConfirmPassword" class="form-label">Parola Tekrar</label>
      <input type="password" class="form-control" asp-for="ConfirmPassword">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>